<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/movies/new.css" />
<%- include('../partials/nav') %>


<main>
  <h1><%= title %></h1>
  <form id="new-form" action="" method="">
    <label for="airline">Airline:</label>
    <input type="text" name="airline" id="airline-input">
    <label for="flight-Number-input">FlightNo:</label>
    <input type="text" name="flightNo" id="flight-Number-input">
    <label for="airpor-select">Airport:</label>
    <select name="airport" id="airpor-select">
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
      <option value="DEN">DEN</option>
    </select>
    <label for="meals-input">Meals:</label>
    <input type="text" name="meals" id="meal-input">
    <label for="depart-input">Departs:</label>
    <input type="text" name="departs">
    <button type="submit">Add Flight</button>
  </form>
</main>


<%- include("../partials/footer") %>